<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAF4CC"
    android:paddingLeft="40dp"
    android:paddingTop="50dp"
    tools:context=".stoFragment">


    <TextView
        android:id="@+id/p3Mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo"
        app:layout_constraintBaseline_toBaselineOf="@+id/p3"
        app:layout_constraintStart_toEndOf="@+id/p3" />

    <TextView
        android:id="@+id/p2Mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo"
        app:layout_constraintBaseline_toBaselineOf="@+id/p2"
        app:layout_constraintStart_toEndOf="@+id/p2" />

    <TextView
        android:id="@+id/p1Mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo"
        app:layout_constraintBaseline_toBaselineOf="@+id/p1"
        app:layout_constraintStart_toEndOf="@+id/p1" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Product 1:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:layout_editor_absoluteX="28dp" />

    <EditText
        android:id="@+id/p3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView15" />

    <EditText
        android:id="@+id/p1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView16"
        app:layout_constraintStart_toEndOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Product 2:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:layout_editor_absoluteX="28dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Product 3:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:layout_editor_absoluteX="28dp" />

    <EditText
        android:id="@+id/p2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
        app:layout_constraintStart_toEndOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Reactant 3:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:layout_editor_absoluteX="28dp" />

    <EditText
        android:id="@+id/re3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Reactant 2:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="28dp" />

    <EditText
        android:id="@+id/re2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"

        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
        app:layout_constraintStart_toEndOf="@+id/textView9" />

    <Button
        android:id="@+id/calcy"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:text="Calculate"
        android:textSize="25sp"
        android:textStyle="bold"
        app:backgroundTint="#70C573"
        app:fontFamily="@font/archivo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reactant 1:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:fontFamily="@font/archivo"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="49dp" />

    <EditText
        android:id="@+id/re1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:hint="2(H2O){57.6}"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>